        <activity
            android:name=".View.ProviderBookings"
            android:exported="false"
            android:theme="@style/Theme.HustleHub" />
        <activity
            android:name=".View.RegisterService"
            android:exported="false"
            android:theme="@style/Theme.HustleHub" />
        <activity
            android:name=".View.AboutUsActivity"
            android:exported="false"
            android:theme="@style/Theme.HustleHub" />
        <activity
            android:name=".View.BookServiceActivity"
            android:exported="false"
            android:theme="@style/Theme.HustleHub" />
        <activity
            android:name=".View.CategoriesActivity"
            android:exported="false"
            android:theme="@style/Theme.HustleHub" />
        <activity
            android:name=".View.ChatActivity"
            android:exported="false"
            android:theme="@style/Theme.HustleHub" />
        <activity
            android:name=".View.ContactActivity"
            android:exported="false"
            android:theme="@style/Theme.HustleHub" />
        <activity
            android:name=".View.ProfileActivity"
