<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.BookServiceFragment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/light_teal"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/add_pet_back_button"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="@string/back_button"
                android:src="@drawable/ic_arrow_back_white_24dp"
                android:backgroundTint="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:background="@color/warm_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="13dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_service_page_title"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_teal"
                    android:layout_marginBottom="16dp"
                    android:layout_gravity="center_horizontal" />

                <TextView
                    android:id="@+id/bookServiceDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/book_service_description"
                    android:textSize="16sp"
                    android:textColor="@color/text_light_grey"
                    android:layout_marginBottom="24dp"
                    android:textAlignment="center"
                    android:layout_gravity="center_horizontal"
                    tools:text="Confirm details and schedule your service with Jane Doe." />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="5dp"
                    app:cardBackgroundColor="@color/white">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <!-- Service Details -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/service_details_label"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/deep_blue"
                            android:layout_marginBottom="4dp" />

                        <TextView
                            android:id="@+id/selectedServiceTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Calculus Tutoring"
                            android:textSize="16sp"
                            android:textColor="@color/primary_teal"
                            android:layout_marginBottom="24dp" />

                        <!-- Date & Time -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/date_time_label"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/deep_blue"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="16dp">

                            <Button
                                android:id="@+id/btnSelectDate"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="48dp"
                                android:text="@string/select_date_button"
                                android:textSize="14sp"
                                android:background="@color/light_teal"
                                android:textColor="@color/deep_blue"
                                android:padding="12dp"
                                android:layout_marginEnd="8dp"
                                app:cornerRadius="8dp" />

                            <Button
                                android:id="@+id/btnSelectTime"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:minHeight="48dp"
                                android:text="@string/select_time_button"
                                android:textSize="14sp"
                                android:background="@color/light_teal"
                                android:textColor="@color/deep_blue"
                                android:padding="12dp"
                                android:layout_marginStart="8dp"
                                app:cornerRadius="8dp" />
                        </LinearLayout>



                        <Spinner
                            android:id="@+id/timeslotSpinner"
                            android:entries="@array/time_slots"
                            android:layout_width="match_parent"
                            android:visibility="gone"
                            android:layout_height="wrap_content"/>



                        <!-- Selected Date/Time -->
                        <TextView
                            android:id="@+id/selectedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="No date selected"
                            android:textSize="15sp"
                            android:textColor="@color/text_light_grey"
                            android:layout_marginBottom="12dp" />


                        <!-- Location -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/location_label"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/deep_blue"
                            android:layout_marginBottom="8dp" />

                        <RadioGroup
                            android:id="@+id/locationRadioGroup"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="24dp">

                            <RadioButton
                                android:id="@+id/radioOnline"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location_online"
                                android:textColor="@color/deep_blue"
                                android:textSize="16sp"
                                android:layout_marginEnd="16dp" />

                            <RadioButton
                                android:id="@+id/radioOnCampus"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/location_on_campus"
                                android:textColor="@color/deep_blue"
                                android:textSize="16sp" />
                        </RadioGroup>

                        <!-- Additional Notes -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            app:hintEnabled="false">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/additionalNotes"
                                android:layout_width="match_parent"
                                android:layout_height="120dp"
                                android:background="@drawable/edit_text_background"
                                android:gravity="top"
                                android:hint="@string/additional_notes_hint"
                                android:inputType="textMultiLine"
                                android:minHeight="48dp"
                                android:padding="12dp"
                                android:textSize="14sp" />
                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Confirm Button -->
                        <Button
                            android:id="@+id/btnConfirmBooking"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:backgroundTint="@color/primary_teal"
                            android:padding="16dp"
                            android:minHeight="48dp"
                            android:text="@string/confirm_booking_button"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            app:cornerRadius="8dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>
