<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warm_grey"
        tools:context=".fragments.HomeFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Hero Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="24dp"
                android:background="@drawable/gradient_hero_background">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hero_title"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:textColor="@color/deep_blue"
                    android:textAlignment="center"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hero_subtitle"
                    android:textSize="18sp"
                    android:textColor="@color/text_light_grey"
                    android:textAlignment="center"
                    android:layout_marginBottom="32dp"
                    android:maxWidth="600dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="32dp">

                    <Button
                        android:id="@+id/btnFindService"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/find_service_button"
                        android:backgroundTint="@color/primary_teal"
                        android:textColor="@color/white"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:layout_marginEnd="16dp"
                        android:elevation="4dp"
                        app:cornerRadius="8dp" />

                    <Button
                        android:id="@+id/btnOfferSkills"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/offer_skills_button"
                        android:backgroundTint="@color/soft_orange"
                        android:textColor="@color/white"
                        android:paddingStart="24dp"
                        android:paddingEnd="24dp"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp"
                        android:elevation="4dp"
                        app:cornerRadius="8dp" />
                </LinearLayout>

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:src="@drawable/students"
                    android:scaleType="centerCrop"
                    android:contentDescription="Vibrant Student Community"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/round_image_background"
                    android:elevation="8dp" />

            </LinearLayout>

            <!-- How It Works Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="32dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_it_works_title"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_teal"
                    android:layout_marginBottom="32dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="16dp">

                    <!-- Step 1 Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/light_teal">

                        <LinearLayout
                            android:id="@+id/discoverLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_search_black_24dp"
                                android:contentDescription="Discover Icon"
                                android:layout_marginBottom="16dp"
                                app:tint="@color/darker_teal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/step_1_title"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/deep_blue"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/step_1_description"
                                android:textSize="16sp"
                                android:textColor="@color/text_light_grey"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Step 2 Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="24dp"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/light_teal">

                        <LinearLayout
                            android:id="@+id/connectLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_chat_teal_48dp"
                                android:contentDescription="Connect Icon"
                                android:layout_marginBottom="16dp"
                                app:tint="@color/darker_teal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/step_2_title"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/deep_blue"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/step_2_description"
                                android:textSize="16sp"
                                android:textColor="@color/text_light_grey"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <!-- Step 3 Card -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardCornerRadius="10dp"
                        app:cardElevation="5dp"
                        app:cardBackgroundColor="@color/light_teal">

                        <LinearLayout
                            android:id="@+id/thriveLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="24dp">

                            <ImageView
                                android:layout_width="64dp"
                                android:layout_height="64dp"
                                android:src="@drawable/ic_handshake_teal_48dp"
                                android:contentDescription="Thrive Icon"
                                android:layout_marginBottom="16dp"
                                app:tint="@color/darker_teal" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/step_3_title"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:textColor="@color/deep_blue"
                                android:layout_marginBottom="8dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/step_3_description"
                                android:textSize="16sp"
                                android:textColor="@color/text_light_grey"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>
