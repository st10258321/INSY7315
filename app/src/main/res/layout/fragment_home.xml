                                    android:layout_height="wrap_content"
                                    android:text="@string/step_1_description"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_light_grey"
                                    android:textAlignment="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Step 2 Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardBackgroundColor="@color/light_teal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="24dp">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:src="@drawable/ic_chat_teal_48dp"
                                    android:contentDescription="Connect Icon"
                                    android:layout_marginBottom="16dp"
                                    app:tint="@color/darker_teal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/step_2_title"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/deep_blue"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/step_2_description"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_light_grey"
                                    android:textAlignment="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>

                        <!-- Step 3 Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardBackgroundColor="@color/light_teal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="24dp">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:src="@drawable/ic_handshake_teal_48dp"
                                    android:contentDescription="Thrive Icon"
                                    android:layout_marginBottom="16dp"
                                    app:tint="@color/darker_teal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/step_3_title"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/deep_blue"
                                    android:layout_marginBottom="8dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/step_3_description"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_light_grey"
                                    android:textAlignment="center" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>



                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

