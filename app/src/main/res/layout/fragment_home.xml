                        android:layout_height="wrap_content"
                        android:text="@string/how_it_works_title"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/primary_teal"
                        android:layout_marginBottom="32dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingBottom="16dp">

                        <!-- Step 1 Card -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="24dp"
                            app:cardCornerRadius="10dp"
                            app:cardElevation="5dp"
                            app:cardBackgroundColor="@color/light_teal">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:padding="24dp">

                                <ImageView
                                    android:layout_width="64dp"
                                    android:layout_height="64dp"
                                    android:src="@drawable/ic_search_black_24dp"
                                    android:contentDescription="Discover Icon"
                                    android:layout_marginBottom="16dp"
                                    app:tint="@color/darker_teal" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/step_1_title"
                                    android:textSize="20sp"
                                    android:textStyle="bold"
                                    android:textColor="@color/deep_blue"
                                    android:layout_marginBottom="8dp" />

                                <TextView
