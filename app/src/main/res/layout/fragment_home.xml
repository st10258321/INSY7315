        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fillViewport="true"
            android:background="@color/warm_grey">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Hero Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="24dp"
                    android:background="@drawable/gradient_hero_background">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hero_title"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_blue"
                        android:textAlignment="center"
                        android:layout_marginBottom="16dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/hero_subtitle"
                        android:textSize="18sp"
                        android:textColor="@color/text_light_grey"
                        android:textAlignment="center"
                        android:layout_marginBottom="32dp"
                        android:maxWidth="600dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="32dp">

                        <Button
                            android:id="@+id/btnFindService"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/find_service_button"
                            android:backgroundTint="@color/primary_teal"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:layout_marginEnd="16dp"
                            android:elevation="4dp"
                            app:cornerRadius="8dp" />

                        <Button
                            android:id="@+id/btnOfferSkills"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/offer_skills_button"
                            android:backgroundTint="@color/soft_orange"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:paddingStart="24dp"
                            android:paddingEnd="24dp"
                            android:paddingTop="12dp"
                            android:paddingBottom="12dp"
                            android:elevation="4dp"
                            app:cornerRadius="8dp" />
                    </LinearLayout>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/students"
                        android:scaleType="centerCrop"
                        android:contentDescription="Vibrant Student Community"
                        android:layout_marginTop="16dp"
                        android:background="@drawable/round_image_background"
                        android:elevation="8dp" />

                </LinearLayout>

                <!-- How It Works Section -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="32dp"
                    android:background="@color/white">

