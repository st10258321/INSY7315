<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warm_grey"
        tools:context=".fragments.RegisterFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/signup_title"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="@color/primary_teal"
                android:layout_marginBottom="32dp" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registerName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/signup_name_hint"
                    android:inputType="textPersonName"
                    android:padding="14dp"
                    android:textSize="13sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registerEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/form_email_hint"
                    android:inputType="textEmailAddress"
                    android:padding="14dp"
                    android:textSize="13sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registerCellNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/cell_number_hint"
                    android:inputType="phone"
                    android:padding="14dp"
                    android:textSize="13sp"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registerPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/login_password_hint"
                    android:textSize="12sp"
                    android:inputType="textPassword"
                    android:padding="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:hintEnabled="false"
                app:passwordToggleEnabled="true">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registerConfirmPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="@string/signup_confirm_password_hint"
                    android:textSize="11sp"
                    android:inputType="textPassword"
                    android:padding="14dp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Improvement: Add RadioGroup for user role selection -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register as:"
                android:textSize="16sp"
                android:textColor="@color/deep_blue"
                android:layout_marginBottom="8dp" />

            <RadioGroup
                android:id="@+id/radioGroupUserRole"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="24dp">

                <RadioButton
                    android:id="@+id/radioCustomer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Customer"
                    android:textColor="@color/deep_blue"
                    android:textSize="16sp"
                    android:checked="true"
                    android:layout_marginEnd="16dp" />

                <RadioButton
                    android:id="@+id/radioServiceProvider"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Service Provider"
                    android:textColor="@color/deep_blue"
                    android:textSize="16sp" />
            </RadioGroup>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/aboutMeLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:hintEnabled="false"
                android:visibility="visible">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/registerAboutMe"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_text_background"
                    android:hint="About Me"
                    android:inputType="textMultiLine"
                    android:padding="14dp"
                    android:textColor="@color/primary_teal"
                    android:textSize="13sp"
                    android:minLines="3"
                    android:gravity="top"
                    tools:ignore="TouchTargetSizeCheck" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- End Improvement -->

            <Button
                android:id="@+id/btnRegisterSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/signup_title"
                android:background="@color/primary_teal"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="16dp"
                android:layout_marginBottom="24dp"
                app:cornerRadius="8dp" />

            <TextView
                android:id="@+id/tvLoginPrompt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/already_have_account"
                android:textColor="@color/deep_blue"
                android:textSize="16sp"
                android:layout_marginBottom="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/social_login_prompt"
                android:textSize="16sp"
                android:textColor="@color/deep_blue"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/btnSocialInstagramRegister"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_instagram_primary_teal_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Register with Instagram"
                    android:layout_marginEnd="24dp"
                    app:tint="@color/deep_blue" />

                <ImageButton
                    android:id="@+id/btnSocialFacebookRegister"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_facebook_primary_teal_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Register with Facebook"
                    android:layout_marginEnd="24dp"
                    app:tint="@color/deep_blue" />

                <ImageButton
                    android:id="@+id/btnSocialTwitterRegister"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_twitter_primary_teal_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Register with Twitter"
                    app:tint="@color/deep_blue" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</layout>

