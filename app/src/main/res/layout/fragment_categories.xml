                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Category Card 7 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEvents"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_event_48dp"
                        android:contentDescription="Events Icon"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/primary_teal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_events"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_blue"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Category Card 8 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWellness"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_spa_48dp"
                        android:contentDescription="Wellness Icon"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/primary_teal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_wellness"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_blue"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Category Card 9 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTransport"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_car_48dp"
                        android:contentDescription="Transport Icon"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/primary_teal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_transport"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_blue"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Category Card 10 -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardHome"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="8dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="5dp"
                app:cardBackgroundColor="@color/white">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="16dp">
                    <ImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/ic_home_black_24dp"
                        android:contentDescription="Home Services Icon"
                        android:layout_marginBottom="8dp"
                        app:tint="@color/primary_teal" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/category_home"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/deep_blue"
                        android:textAlignment="center" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </GridLayout>

    </LinearLayout>
    </ScrollView>
</layout>
