<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_container"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warm_grey"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_your_service"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_teal"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Add your service to start earning on HustleHub"
                android:textSize="16sp"
                android:textColor="@color/text_light_grey"
                android:layout_marginBottom="24dp"
                android:textAlignment="center" />

            <!-- Service Title -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/service_title"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etServiceTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textSize="16sp"
                    android:hint="Service Title"
                    android:contentDescription="Enter service title"
                    android:inputType="textCapWords" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Category Selection -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/category"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/actvCategory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textSize="16sp"
                    android:hint="Select Category"
                    android:contentDescription="Select a category" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Description -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="@string/service_description"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etServiceDescription"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    android:gravity="top"
                    android:minHeight="48dp"
                    android:inputType="textMultiLine"
                    android:maxLines="5"
                    android:textSize="16sp"
                    android:hint="Service Description"
                    android:contentDescription="Enter service description"
                    android:background="@color/white" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Pricing Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="16dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:hint="Price"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/etServicePrice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:textSize="16sp"
                        android:hint="Enter Price"
                        android:contentDescription="Enter service price"
                        android:inputType="numberDecimal" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp"
                    android:hint="Pricing Type"
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                    <AutoCompleteTextView
                        android:id="@+id/actvPricingType"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:minHeight="48dp"
                        android:textSize="16sp"
                        android:hint="Select Pricing Type"
                        android:contentDescription="Select pricing type" />
                </com.google.android.material.textfield.TextInputLayout>
            </LinearLayout>

            <!-- Availability Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Availability"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/deep_blue"
                android:layout_marginBottom="8dp" />

            <!-- Days -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="7"
                android:layout_marginBottom="12dp">

                <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:minHeight="48dp" android:text="Mon" android:textSize="16sp"/>
                <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:minHeight="48dp" android:text="Tue" android:textSize="16sp"/>
                <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:minHeight="48dp" android:text="Wed" android:textSize="16sp"/>
                <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:minHeight="48dp" android:text="Thu" android:textSize="16sp"/>
                <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:minHeight="48dp" android:text="Fri" android:textSize="16sp"/>
                <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:minHeight="48dp" android:text="Sat" android:textSize="16sp"/>
                <CheckBox android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1" android:minHeight="48dp" android:text="Sun" android:textSize="16sp"/>
            </LinearLayout>

            <!-- Time Slots -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Select Time Slot"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

                <AutoCompleteTextView
                    android:id="@+id/etAvailability"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textSize="16sp"
                    android:hint="Choose time slot"
                    android:contentDescription="Select availability time slot"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Location -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:hint="Location"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">

                <AutoCompleteTextView
                    android:id="@+id/actvLocation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="48dp"
                    android:textSize="16sp"
                    android:hint="Select Location"
                    android:contentDescription="Select location" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Upload Images Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Service Images (Optional)"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/deep_blue"
                android:layout_marginBottom="8dp" />

            <Button
                android:id="@+id/btnUploadImages"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:backgroundTint="@color/soft_orange"
                android:padding="12dp"
                android:text="Upload Service Images"
                android:textAlignment="center"
                android:textColor="#616161"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btnSubmitService"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Register Service"
                android:backgroundTint="@color/primary_teal"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textStyle="bold"
                android:textSize="18sp"
                android:padding="16dp" />

        </LinearLayout>
    </ScrollView>
</layout>

