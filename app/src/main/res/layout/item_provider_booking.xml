<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Booking Header: Service Title and Status -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="8dp">

                <TextView
                    android:id="@+id/bookingServiceTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:textColor="@color/primary_teal"
                    tools:text="Calculus Tutoring" />

                <TextView
                    android:id="@+id/bookingStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp"
                    android:background="@drawable/status_pending_background"
                    android:textColor="@color/white"
                    tools:text="Pending" />
            </LinearLayout>

            <!-- Customer Name -->
            <TextView
                android:id="@+id/bookingCustomerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/deep_blue"
                android:layout_marginBottom="4dp"
                tools:text="Customer: John Smith" />

            <!-- Date and Time -->
            <TextView
                android:id="@+id/bookingDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/deep_blue"
                android:layout_marginBottom="4dp"
                tools:text="Date: 2023-10-27, Time: 14:00" />

            <!-- Location -->
            <TextView
                android:id="@+id/bookingLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/deep_blue"
                android:layout_marginBottom="8dp"
                tools:text="Location: Online" />

            <!-- Additional Notes (Optional) -->
            <TextView
                android:id="@+id/bookingNotes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/text_light_grey"
                android:layout_marginBottom="12dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="Notes: Please focus on integration techniques and differential equations." />

            <!-- Action Buttons for Pending Bookings -->
            <LinearLayout
                android:id="@+id/layoutActionButtons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:visibility="visible"
                tools:visibility="visible"> <!-- Set to gone for confirmed bookings -->

                <Button
                    android:id="@+id/btnRejectBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/reject_button"
                    android:background="@color/red_error"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:layout_marginEnd="8dp"
                    app:cornerRadius="8dp" />

                <Button
                    android:id="@+id/btnConfirmBooking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/confirm_button"
                    android:background="@color/primary_teal"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    app:cornerRadius="8dp" />
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
