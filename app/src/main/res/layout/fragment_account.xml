<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/warm_grey"
        tools:context=".fragments.AccountFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@drawable/ic_person_black_24dp"
                app:tint="@color/primary_teal"
                android:layout_marginBottom="24dp"
                android:contentDescription="Account Icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_page_title"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/primary_teal"
                android:layout_marginBottom="16dp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_welcome_message"
                android:textSize="16sp"
                android:textColor="@color/deep_blue"
                android:layout_marginBottom="32dp"
                android:textAlignment="center" />

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_title"
                android:backgroundTint="@color/primary_teal"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:padding="14dp"
                android:layout_marginBottom="16dp"
                app:cornerRadius="8dp" />

            <Button
                android:id="@+id/btnRegister"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                android:backgroundTint="@color/soft_orange"
                android:padding="14dp"
                android:text="@string/signup_title"
                android:textAlignment="center"
                android:textColor="#616161"
                android:textSize="16sp"
                android:textStyle="bold"
                app:cornerRadius="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/social_login_prompt"
                android:textSize="14sp"
                android:textColor="@color/deep_blue"
                android:layout_marginBottom="16dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal">

                <ImageButton
                    android:id="@+id/btnSocialInstagram"
                    android:layout_width="38dp"
                    android:layout_height="38dp"
                    android:src="@drawable/ic_instagram_primary_teal_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Login with Instagram"
                    android:layout_marginEnd="24dp"
                    app:tint="@color/deep_blue" />

                <ImageButton
                    android:id="@+id/btnSocialFacebook"
                    android:layout_width="34dp"
                    android:layout_height="34dp"
                    android:src="@drawable/ic_facebook_primary_teal_24"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Login with Facebook"
                    android:layout_marginEnd="24dp"
                    app:tint="@color/deep_blue" />

                <ImageButton
                    android:id="@+id/btnSocialTwitter"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_twitter_primary_teal_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Login with Twitter"
                    app:tint="@color/deep_blue" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</layout>
